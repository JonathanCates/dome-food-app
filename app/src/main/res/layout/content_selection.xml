<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#689696"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.jcate478.seat_suite.Selection"
    tools:showIn="@layout/activity_selection">


       <!-- android:background="@drawable/round_button" -->
    <Button
        android:background="#003A3A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="150dp"
        android:height="75dp"
        android:text="Section"
        android:textSize="20dp"
        android:textColor="#D2E7ED"
        android:id="@+id/section_button"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/chooseyourfood"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="150dp"
        android:height="75dp"
        android:text="Food Type"
        android:textSize="20dp"
        android:background="#003A3A"
        android:textColor="#D2E7ED"
        android:id="@+id/food_type_button"
        android:layout_alignTop="@+id/vendor_button"
        android:layout_alignLeft="@+id/account"
        android:layout_alignStart="@+id/account" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="150dp"
        android:height="75dp"
        android:text="Vendor"
        android:textSize="20dp"
        android:background="#003A3A"
        android:textColor="#D2E7ED"
        android:id="@+id/vendor_button"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/section_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="180dp"
        android:text="Account"
        android:textColor="#D2E7ED"
        android:background="#2C7D7D"
        android:id="@+id/account"
        android:layout_marginBottom="39dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="180dp"
        android:text="Order History"
        android:textColor="#D2E7ED"
        android:background="#2C7D7D"
        android:id="@+id/orderHistory"
        android:layout_alignTop="@+id/account"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

   <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Search By"
        android:textColor="#D2E7ED"
        android:textSize="25dp"
        android:id="@+id/chooseyourfood"
       android:layout_below="@+id/seatSuite"
       android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Seat Suite"
        android:textColor="#D2E7ED"
        android:textSize="45dp"
        android:id="@+id/seatSuite"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp" />

</RelativeLayout>
